{
    "manifest_version": 3,
    "name": "textshort",
    "version": "1.0",
    "description": "Automatically replace shortcuts with full text",
    "permissions": ["activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
      //"default_icon": {
        //"16": "icon.png",
        //"48": "icon.png",
        //"128": "icon.png"
      }
      
    }
  
  